<%= form_for [:admin, @season] do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :description %>
  <%= f.text_field :description, class: "form-control" %>

  <%= f.label :number_of_team %>
  <%= f.text_field :number_of_team, class: "form-control" %>

  <%= f.label :number_of_match %>
  <%= f.text_field :number_of_match, class: "form-control" %>

  <%= f.submit t("admin.season.create_season"), class: "btn btn-primary" %>
<% end %>
